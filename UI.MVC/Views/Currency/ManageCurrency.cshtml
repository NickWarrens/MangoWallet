@using Domain.Currencies.BaseCurrency

@{
    Layout = "_Layout";
}

<link rel="stylesheet" href="~/css/ManageCurrency.css" />

<!-- Display Error or Success Messages -->
@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMessage
    </div>
}

@if (ViewBag.SuccessMessage != null)
{
    <div class="alert alert-success">
        @ViewBag.SuccessMessage
    </div>
}

<div class="form-container">
    <!-- Add Currency Form -->
    <form method="post" action="@Url.Action("AddCurrency", "Currency")" class="form-section">
        <h3>Add Currency</h3>
        <div class="form-group">
            <label for="addCurrencyType">Select Currency</label>
            <select id="addCurrencyType" name="addCurrencyType" class="form-control" required>
                @foreach (var currency in Enum.GetValues(typeof(CurrencyType)).Cast<CurrencyType>())
                {
                    <option value="@currency">@CurrencyMetaDataProvider.GetCurrencyName(currency)</option>
                }
            </select>
        </div>

        <div class="form-group">
            <label for="addAmount">Amount</label>
            <input type="number" id="addAmount" name="addAmount" class="form-control" min="0.01" step="0.01" required />
        </div>

        <button type="submit" class="btn btn-primary">Add Currency</button>
    </form>
    
    <!-- Subtract Currency Form -->
    <form method="post" action="@Url.Action("SubtractCurrency", "Currency")" class="form-section">
        <h3>Subtract Currency</h3>
        <div class="form-group">
            <label for="subtractCurrencyType">Select Currency</label>
            <select id="subtractCurrencyType" name="subtractCurrencyType" class="form-control" required>
                @foreach (var currency in Enum.GetValues(typeof(CurrencyType)).Cast<CurrencyType>())
                {
                    <option value="@currency">@CurrencyMetaDataProvider.GetCurrencyName(currency)</option>
                }
            </select>
        </div>

        <div class="form-group">
            <label for="subtractAmount">Amount</label>
            <input type="number" id="subtractAmount" name="subtractAmount" class="form-control" min="0.01" step="0.01" required />
        </div>

        <button type="submit" class="btn btn-secondary">Subtract Currency</button>
    </form>
</div>